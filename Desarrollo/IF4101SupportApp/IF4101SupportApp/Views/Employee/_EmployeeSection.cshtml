
@model IF4101SupportApp.Models.Employee

<div class="container">
    <div class="text-center">
        <h2 class="section-heading text-uppercase">Employees</h2>
        <div class="row">
            <div class="col-md-5">
                <form id="Employee_Form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="EmployeeName" class="control-label">Name</label>
                            <input asp-for="EmployeeName" id="EmployeeName" class="form-control" required />
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="FirstSurname" class="control-label">First Surname</label>
                            <input asp-for="FirstSurname" id="FirstSurname" class="form-control" required />
                            <span asp-validation-for="FirstSurname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="SecondSurname" class="control-label">Second Surname</label>
                            <input asp-for="SecondSurname" id="SecondSurname" class="form-control" required />
                            <span asp-validation-for="SecondSurname" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input type="email" asp-for="Email" id="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input type="password" asp-for="Password" id="Password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Services" class="control-label">Services</label>
                            <select class="selectpicker" id="Services" multiple data-live-search="true" title="Assign services...">
                                <option value="1">Telefonia Movil</option>
                                <option value="2">Cable</option>
                                <option value="3">Telefonia Fija</option>
                                <option value="4">Internet</option>
                            </select>
                            <span asp-validation-for="Services" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12">
                            <label asp-for="Supervised" class="control-label">Supervised</label>
                            <select asp-for="Supervised" id="Supervised" class="selectpicker" data-live-search="true" title="Supervised by...">
                                <option value="1">Yerlin Leal Achi</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-7">

                <div class="table-responsive">
                    <table id="table-employees" class="table table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Employee ID</th>
                                <th>Name</th>
                                <th>First Surname</th>
                                <th>Second Surname</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody class="tbody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- The Modal -->
<div class="modal" id="DetailEmployeeModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form id="UEmployee_Form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="EmployeeName" class="control-label">Name</label>
                            <input asp-for="EmployeeName" id="UEmployeeName" class="form-control" required />
                        </div>
                        <div class="col">
                            <label asp-for="FirstSurname" class="control-label">First Surname</label>
                            <input asp-for="FirstSurname" id="UFirstSurname" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="SecondSurname" class="control-label">Second Surname</label>
                            <input asp-for="SecondSurname" id="USecondSurname" class="form-control" required />
                        </div>
                        <div class="col">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input type="email" asp-for="Email" id="UEmail" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input type="password" asp-for="Password" id="UPassword" class="form-control" required />
                        </div>
                        <div class="col">
                            <label asp-for="Services" class="control-label">Services</label>
                            <select class="selectpicker" id="UServices" multiple data-live-search="true" title="Assign services...">
                                <option value="1">Telefonia Movil</option>
                                <option value="2">Cable</option>
                                <option value="3">Telefonia Fija</option>
                                <option value="4">Internet</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label asp-for="Supervised" class="control-label">Supervised</label>
                            <select asp-for="Supervised" id="USupervised" class="selectpicker" data-live-search="true" title="Supervised by..." style="width:100%;">
                                <option value="1">Yerlin Leal Achi</option>
                            </select>
                        </div>
                            
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" form="UEmployee_Form" class="btn btn-primary float-right">Update</button>
                <button type="button" class="btn btn-danger float-left" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

